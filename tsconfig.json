{
  "include": ["src"],
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["DOM", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "jsx": "react",
    "skipLibCheck": true,
    "outDir": "temp",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "resolveJsonModule": true,
    "declarationDir": "dist/types",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  }
}
